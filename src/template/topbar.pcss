/* Topbar */

.top-bar {
	display: flex;
	justify-content: space-between;
	margin-top: 15px;
}

.top-bar a {
	display: inline-block;
	margin: 0 7px;
	font-size: 0.75rem;
	color: var(--grey-555);
	
	&:first-child {
		margin-left: 0;
	}
}

.social-icon svg {
	width: 25px;
	height: 25px;
	transition: color .2s ease-in-out;
}
